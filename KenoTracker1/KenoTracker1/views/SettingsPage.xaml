<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="KenoTracker1.views.SettingsPage"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Settings">
    <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
        <Label Text="Game Number" />
        <Entry x:Name="gamenox" Keyboard="Numeric" />
        <Label Text="Amount of Numbers to Pick" />
        <Entry x:Name="amountno" Keyboard="Numeric" />
        <Button Clicked="database_OnClicked" Text="Clear Database" />

    </StackLayout>

</ContentPage>